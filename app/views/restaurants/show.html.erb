<div class="row">
  <div class="col-lg-12">
    <h1>レストラン詳細</h1>
    <dl>
      <dt>店名</dt>
      <dd><%= @restaurant.name %></dd>
      <dt>電話番号</dt>
      <dd><%= @restaurant.tel %></dd>
      <dt>住所</dt>
      <dd><%= @restaurant.address %></dd>
      <dt>ホームページ</dt>
      <dd><%= @restaurant.url %></dd>
    </dl>
  </div>
</div>
<hr />

<div class="row">
  <div class="col-lg-12">
    <%= form_for(@review, url: { controller: :reviews, action: :create }) do |f| %>
      <div class="form-group">
        <%= f.label :body , 'レビュー' %><br>
        <%= f.text_area :body, class: "form-control" %>
      </div>
      <%= f.hidden_field :restaurant_id, value: @restaurant.id %>
      <%= f.submit %>
    <% end %>
  </div>
</div>



<div class="row">
  <div class="col-lg-12">
    <h2>レビュー</h2>
    <% @reviews.each do |review| %>
      <div class="media">
        <div class="media-body">
          <p><%= simple_format(review.body) %></p>
          <p class="text-muted">
            投稿日時：<%= review.created_at.strftime('%Y/%m/%d %H:%M') %>
            <%= link_to "削除する", review_path(review), method: :delete %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>


